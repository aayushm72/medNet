<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- External Stylesheets-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Custom Stylesheets -->
    <link rel="stylesheet" type="text/css" href="~/Styles/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/Feedback.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/PatientOverview.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/Login.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/Logout.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/Shared.css" />


    <title>MedNet | @ViewData["Title"]</title>
</head>
<body>
    <style>
        img {
            max-width: 200px;
            max-height: 40px;
            margin-top: 5px;
            margin-bottom: 5px;
            margin-left: 5px;
            margin-right: 5px;
            text-align: center;
        }
    </style>
    <div class="topnav" id="myTopnav">
        <img src="~/theme/images/MedNetLogo.png" style="float: left;"/>
        @RenderSection("NavButtons", required: false)
        <a href="javascript:void(0);" class="icon" onclick="resizeFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>

    <div class="card">
        @RenderBody()
    </div>

    <div class="footer">
        <p>
            <b>Version</b> 0.0.1
            <strong>Copyright LifeBlocks &copy; 2020 MedNet.</strong>
        </p>
    </div>

    @RenderSection("Scripts", required: false)

    <script>
    function resizeFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }</script>

</body>
</html>
