<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta name="google" content="notranslate">
    <meta http-equiv="Content-Language" content="en">
    <meta name="viewport" content="width=device-width, initial-scale=1", maximum-scale="1">
    <!-- External Stylesheets-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- MedNet Stylesheets -->

    <link rel="stylesheet" type="text/css" href="~/Styles/light-theme.css" />
    <!--Page Specific Stylesheets-->
    @RenderSection("StyleLinks", required: false)

    <title>MedNet | @ViewData["Title"]</title>
</head>

<body>
    <div class="topnav" id="myTopnav">
        <img class="mednet-logo" src="~/theme/images/MedNetLogo.png" style="float: left; width: 200px;" />
        @RenderSection("NavButtons", required: false)

        <a href="javascript:void(0);" class="icon" onclick="resizeFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>

    <div class="main pb-4">
        @RenderBody()
    </div>

    <div class="footer">
            <b>Version</b> 0.0.1
            <strong>Copyright LifeBlocks &copy; 2020 MedNet.</strong> <br/>
        <a href="~/Resources/MedNet User Manual v0.1.pdf" target="_blank" rel="noopener noreferrer">User Manual</a>
    </div>

    <!-- for Bootstrap v4.5-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

    <script>
        function resizeFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>