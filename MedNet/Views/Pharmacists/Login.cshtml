@model PharmacistLoginViewModel

@{
    ViewData["Title"] = "Pharmacist Log-In";
}

@section NavButtons {
    <!-- L to R -->
    <a href="/Home" class="topnav-lbtn topnav-first">Home</a>

    <!-- R to L -->
    <a href="SignUp" class="topnav-rbtn">Sign-Up</a>
    <a href="Login" class="topnav-rbtn active">Log-In</a>
}


<div class="content-full">
    <div class="form-reg col-sm-8 col-md-7 col-lg-6 col-xl-5">
        <div class="card">
            <div class="card-header">
                <h1>Pharmacist Log-In</h1>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true)
                <form asp-action="Login" method="post" style="text-align: left">


                    <!-- Pharmacist Registration Num -->
                    <div class="form-group">
                        <label>Registration Number</label>
                        @Html.TextBoxFor(n => n.PharmaNum, new { id = "index-regnum", type = "text", placeholder = "####-####-####", title = "Registration Number issued by the College of Pharmacists of BC", @class = "form-control" })
                        <small class="form-text text-muted">Registration Number issued by the College of Pharmacists of BC</small>
                        @Html.ValidationMessageFor(n => n.PharmaNum)
                    </div>

                    <!-- Keyword -->
                    <div class="form-group">
                        <label>Keyword</label>
                        @Html.TextBoxFor(n => n.PharmaKeyword, new { placeholder = "Keyword", title = "Identification keyphrase used for encryption", @class = "form-control" })
                        <small class="form-text text-muted">Identification keyphrase used for encryption</small>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(n => n.password, new { type = "password", placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.password)
                    </div>

                    <button type="submit" id="submitButton" class="btn btn-success btn-block">Log-In</button>
                    <small class="message">Don't have a pharmacist's account? <a href="SignUp">Sign-Up here.</a></small>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
   
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>

    <script type="text/javascript">
        jQuery(function ($) {
            $("#index-regnum").inputmask("9999-9999-9999");
        });</script>
}