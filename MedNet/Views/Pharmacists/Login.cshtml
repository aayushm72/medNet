@model PharmacistLoginViewModel

@{
    ViewData["Title"] = "Pharmacist Login";
}

@section NavButtons {
    <a href="/Home" class="topnav-home">Home</a>
}

<div class="login-page">
    <div class="form">
        <div class="heading">
            <p>Pharmacist Login</p>
        </div>
        <p>Enter your details below to continue.</p>
        @Html.ValidationSummary(true)
        <form asp-action="Login" method="post" class="login-form">
            <div class="tooltip">
                <label>Registration number:</label>
                <span class="tooltiptext">Registration Number issued by the College of Pharmacists of British Columbia.</span>
            </div>
            @Html.TextBoxFor(n => n.PharmaNum, new
       {
           id = "index-regnum",
           type = "text",
           placeholder = "0000-0000-0000",
           title = "Registration Number issued by the College of Pharmacists of British Columbia."
       })            @Html.ValidationMessageFor(n => n.PharmaNum)
            <div class="tooltip">
                <label>Doctor Keyword:</label>
                <span class="tooltiptext">Identification pass phrase created during Sign-Up.</span>
            </div>
            @Html.TextBoxFor(n => n.PharmaKeyword, new { placeholder = "Keyword", title = "Identification pass phrase created during Sign-Up" })
            <label>Password:</label>
            @Html.TextBoxFor(n => n.password, new { type = "password", placeholder = "Password" })
            @Html.ValidationMessageFor(n => n.password)
            <button type="submit">Login</button>
            <p class="message">Don't have an account? <a href="SignUp">Sign up here.</a></p>
        </form>
    </div>
</div>

