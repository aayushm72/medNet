@model PatientEditProfileViewModel
@{
    ViewData["Title"] = "Patient Edit Profile";
}

@section NavButtons {
    <a href="PatientOverview" class="topnav-lbtn topnav-first">Home</a>
    <a href="Logout" class="topnav-rbtn">Logout</a>
}

<body>
    <div class="content-full">
        <div class="row">
            <div class="form-reg col-sm-10 col-md-8 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h3>General Information</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <!-- name -->
                            <div class="form-group">
                                <label for="patientName">Name</label>
                                <div class="form-row">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="patientFirstName" readonly />
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="patientLastName" readonly />
                                    </div>
                                </div>
                            </div>
                            
                            <!-- age -->
                            <div class="form-row">
                                <!-- date of birth-->
                                <div class="form-group col-sm-9">
                                    <label for="patientDOB">Date of Birth</label>
                                    <input class="form-control" type="text" placeholder="patientDOB" readonly />
                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="patientAge">Age</label>
                                    <input class="form-control" type="text" placeholder="patientAge" readonly />
                                </div>
                            </div>
                            
                            <!-- email-->
                            <div class="form-group">
                                <label for="patientEmail">Email</label>
                                <input type="email" class="form-control" id="patientEmail" aria-describedby="emailHelp" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" placeholder="example@lifeblocks.com"/>
                                <small id="emailHelp" class="form-text text-muted">Your email, Our secret.</small>
                            </div>
                            <!-- phone -->
                            <div class="form-group">
                                <label for="patientPhone">Phone</label>
                                <input type="tel" class="form-control" aria-describedby="phoneHelp" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="###-###-####"/>
                                <small id="phoneHelp" class="form-text text-muted">Format: ###-###-####</small>
                            </div>
                            <!-- address info -->
                            <div class="form-group">
                                <label for="patientAddr">Address</label>
                                <input type="text" class="form-control" id="patientAddr" placeholder="Address" />
                            </div>
                            @*<div class="form-group">
                                <label for="patientAddr2">Address 2:</label>
                                <input type="text" class="form-control" id="patientAddr2" placeholder="Address 2" />
                            </div>*@
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="patientCity">City</label>
                                    <input type="text" class="form-control" id="patientCity" placeholder="City" />
                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="patientProv">Province</label>
                                    <select id="patientProv" class="form-control">
                                        <!-- provinces -->
                                        <option>Alb.</option>
                                        <option selected>B.C.</option>
                                        <option>Man.</option>
                                        <option>N.B.</option>
                                        <option>N.L.</option>
                                        <option>N.S.</option>
                                        <option>Ont.</option>
                                        <option>P.E.I</option>
                                        <option>Sask.</option>
                                        <option>Que.</option>

                                        <!-- territories -->
                                        <option>N.W.T</option>
                                        <option>Nvt.</option>
                                        <option>Y.T</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="patientPostal">Postal</label>
                                    <input type="text" class="form-control" id="patientPostal" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-reg col-sm-10 col-md-8 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Emergency Contact(s)</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <!-- add multiple items to the list-->
