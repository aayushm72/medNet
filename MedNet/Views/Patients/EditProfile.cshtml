                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="patientProv">Province</label>
                                    <select id="patientProv" class="form-control">
                                        <!-- provinces -->
                                        <option>Alb.</option>
                                        <option selected>B.C.</option>
                                        <option>Man.</option>
                                        <option>N.B.</option>
                                        <option>N.L.</option>
                                        <option>N.S.</option>
                                        <option>Ont.</option>
                                        <option>P.E.I</option>
                                        <option>Sask.</option>
                                        <option>Que.</option>

                                        <!-- territories -->
                                        <option>N.W.T</option>
                                        <option>Nvt.</option>
                                        <option>Y.T</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="patientPostal">Postal</label>
                                    <input type="text" class="form-control" id="patientPostal" />
                                </div>
                            </div>
                            <!-- Emergency relationship -->
                            <!-- partner -->
                            <div class="form-group">
                                <label>Relationship</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emerRelationship" id="patientPartner" value="partner" />
                                    <label class="form-check-label" for="patientPartner">Partner</label>
                                </div>
                                <!-- parent -->
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emerRelationship" id="patientParent" value="parent" />
                                    <label class="form-check-label" for="patientParent">Parent/Guardian</label>
                                </div>
                                <!-- sibling -->
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emerRelationship" id="patientSibling" value="sibling" />
                                    <label class="form-check-label" for="patientSibling">Sibling</label>
                                </div>
                                <!-- relative -->
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emerRelationship" id="patientRelative" value="relative" />
                                    <label class="form-check-label" for="patientRelative">Relative</label>
                                </div>
                                <!-- friend -->
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emerRelationship" id="patientFriend" value="friend" />
                                    <label class="form-check-label" for="patientFriend">Friend</label>
                                </div>
                                <!-- other -->
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="emerRelationship" id="patientOther" value="other" />
                                    <label class="form-check-label" for="patientOther">Other, please specify.</label>
                                    <input class="form-check" type="text" name="emerRelationship" id="patientOther" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

