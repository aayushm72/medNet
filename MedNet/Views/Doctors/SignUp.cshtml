@model doctorSignUpViewModel

@{
    ViewData["Title"] = "Doctor Sign Up";
}

@section NavButtons {
    <!-- L to R -->
    <a href="/Home" class="topnav-lbtn topnav-first">Home</a>

    <!-- R to L -->
    <a href="SignUp" class="topnav-rbtn active">Sign-Up</a>
    <a href="Login" class="topnav-rbtn">Log-In</a>
}


<div class="content-full">
    <div class="form-reg col-sm-10 col-md-8 col-lg-7 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h2>Doctor Sign-Up</h2>
                <p>Enter your details below to create an account!</p>
            </div>
            <div class="card-body">
                <form asp-controller="Doctors" asp-action="SignUp" method="post">
                    <!-- name -->
                    <div class="form-group">
                        <label>Name</label>
                        <div class="form-row">
                            <div class="col">
                                @Html.TextBoxFor(n => n.FirstName, new { placeholder = "First Name", @required = "required", @class = "form-control" })
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(n => n.LastName, new { placeholder = "Last Name", @required = "required", @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- email-->
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(n => n.Email, new { placeholder = "Email", @required = "required", @class = "form-control" })
                    </div>

                    <!-- MINC -->
                    <div class="form-group">
                        <label>Doctor MINC</label>
                        @Html.TextBoxFor(n => n.DoctorMINC, new { id = "signup-minc", placeholder = "CA##-####-####", title = "12-digit Medical Identification Number for Canada", @required = "required", @class = "form-control" })
                        <small class="form-text text-muted">12-digit Medical Identification Number for Canada</small>
                    </div>

                    <!-- Keyword -->
                    <div class="form-group">
                        <label>Keyword</label>
                        @Html.TextBoxFor(n => n.DoctorKeyWord, new { placeholder = "Keyword", title = "Identification keyphrase used for encryption", @required = "required", @class = "form-control" })
                    <small class="form-text text-muted">Identification keyphrase used for encryption</small>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(n => n.Password, new { type = "password", id = "password", placeholder = "Password", onkeyup = "check()", @required = "required", @class = "form-control" })
                    </div>

                    <!-- Retype Password -->
                    <div class="form-group">
                        <label>Retype Password</label>
                        <input type="password" id="retype-password" name="retype-password" class="form-control" placeholder="Retype Password" onkeyup='check();' />
                        <span id='message'></span><br />
                    </div>

                    <button type="submit" id="submitButton" class="btn btn-success btn-block">Sign-Up</button>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <!-- Select2 -->
    <script src="~/theme/plugins/select2/js/select2.full.min.js"></script>
    <!-- Bootstrap4 Duallistbox -->
    <script src="~/theme/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- date-range-picker -->
    <script src="~/theme/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- bootstrap color picker -->
    <script src="~/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/theme/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Bootstrap Switch -->
    <script src="~/theme/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/theme/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>

    <!-- Scripts -->
    <script type="text/javascript">jQuery(function ($) {
            $("#signup-minc").inputmask("AA99-9999-9999");
        });

        var check = function () {
            if (document.getElementById('password').value == document.getElementById('retype-password').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'Passwords Match.';
                document.getElementById('submitButton').disabled = false;
            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'Passwords do not match, please try again.';
                document.getElementById('submitButton').disabled = true;
            }
        }</script>
}
