@model PatientOverviewViewModel
@{
    ViewData["Title"] = "Patient Overview";
}

@section NavButtons {
    <!-- L to R -->
    <a href="Home">Home</a>
    <a href="PatientLookUp">Search Patient</a>
    <a href="PatientSignUp">Register Patient</a>
    <!-- R to L-->
    <a href="Logout" style="float:right">Logout</a>
    <a href="Home" style="float:right">@ViewBag.DoctorName</a>
}

<body>
    <div class="sidebar">
        <div class="sidebar-body">
            <a href="PatientOverview" class="active">Overview</a>
            <a href="PatientOverview">Appointments</a> <!-- debug -->
            <a href="PatientOverview">Prescriptions</a> <!-- debug -->
            <a href="Home">Close</a> <!-- debug -->
        </div>
    </div>

    <div class="content">
        <div class="overview">
            <div class="overview-header border-bottom">
                <h1>@Model.PatientName</h1>
                <p>PHN: @Model.PatientPHN</p>
            </div>
            <div class="overview-body">
                <!-- row 1-->
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                <h3>General Information</h3>
                            </div>
                            <div class="card-body">
                                <!-- Fill in info here -->
                                <p>Age: @Model.PatientAge</p>
                                <p>Date of Birth: @Model.PatientDOB.ToLongDateString()</p>
                                <p>Address: </p>
                                <p>Email: </p>
                                <p>Phone: </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                Emergency Contact
                            </div>
                            <div class="card-body">
                                <!-- Debug: emergency contact name, phone, relationship to patient-->
                                <ol>
                                    <li>
                                        <p>Name: </p>
                                        <p>Phone: </p>
                                        <p>Relationship: </p>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <!-- row 2-->
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                <h3>Allergies</h3>
                            </div>
                            <div class="card-body">
                                <!-- Maybe add 2 cols of allergies-->
                                @*<ul>
                                    <li>allergy1</li>
                                </ul>*@
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                <h3>Current Medications</h3>
                            </div>
                            <div class="card-body">
                                <!-- Maybe add 2 cols of current meds-->
                                @*<ul>
                                    <li>allergy1</li>
                                </ul>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                <h3>Medical History</h3>
                            </div>
                            <div class="card-body">
                                <!-- Fill in info here -->
                                <!-- Maybe add 2 cols of allergies-->
                                @*<ul>
                                    <li>allergy1</li>
                                </ul>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("defaultOpen").click();
        function openTab(evt, tabName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }
    </script>
</body>

