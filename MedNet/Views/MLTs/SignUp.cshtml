@model mltSignUpViewModel

@{
    ViewData["Title"] = "MLT Sign Up";
}

@section NavButtons {
    <a href="/Home" class="topnav-home">Home</a>
    <a href="Login" class="topnav-dl">Login</a>
}

<head>
    <!-- Select2 -->
    <script src="~/theme/plugins/select2/js/select2.full.min.js"></script>
    <!-- Bootstrap4 Duallistbox -->
    <script src="~/theme/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- date-range-picker -->
    <script src="~/theme/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- bootstrap color picker -->
    <script src="~/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/theme/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Bootstrap Switch -->
    <script src="~/theme/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/theme/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>
</head>

<body>
    <div class="login-form">
        <div class="login-header">
            <h2>Lab Technician Sign Up</h2>
            <p>Enter your details below to create an account</p>
        </div>
        <form asp-action="SignUp" method="post" style="text-align: left;">
            <label>First Name:</label>
            @Html.TextBoxFor(n => n.FirstName, new { placeholder = "First Name", @required = "required" })
            <label>Last Name:</label>
            @Html.TextBoxFor(n => n.LastName, new { placeholder = "Last Name", @required = "required" })
            <label>Email:</label>
            @Html.TextBoxFor(n => n.Email, new { placeholder = "Email", @required = "required" })
            @Html.ValidationMessageFor(n => n.Email)
            <label>CSLMS ID:</label>
            <div class="tooltip allign">
                <span class="tooltiptext">7 digit Canadian Society for Medical Labroratory Science ID</span>
            </div>
            @Html.TextBoxFor(n => n.CSMLSID, new { id = "signup-csmlsid", placeholder = "0000-000", title = "7 digit Canadian Society for Medical Labroratory Science ID", @required = "required" })
            <label>MLT Keyword:</label>
            <div class="tooltip">
                <span class="tooltiptext">Identification pass phrase.</span>
            </div>
            @Html.TextBoxFor(n => n.MLTKeyWord, new { placeholder = "Keyword", title = "Identification Passphrase Here", @required = "required" })
            <label>Password:</label>
            @Html.TextBoxFor(n => n.Password, new { type = "password", id = "password", placeholder = "Password", onkeyup = "check()", @required = "required" })
            <label>Confirm Password:</label>
            <input type="password" id="retype-password" name="retype-password" placeholder="Retype Password" onkeyup='check();' />
            <span id='message'></span><br />
            <button type="submit" id="submitButton">Register</button>
        </form>
    </div>

    <script type="text/javascript">
        jQuery(function ($) {
            $("#signup-csmlsid").inputmask("9999-999");
        });

        var check = function () {
            if (document.getElementById('password').value == document.getElementById('retype-password').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'Passwords Match.';
                document.getElementById('submitButton').disabled = false;
            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'Passwords do not match, please try again.';
                document.getElementById('submitButton').disabled = true;
            }
        }
    </script>
</body>

