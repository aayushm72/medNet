@model MLTLoginViewModel



@{
    ViewData["Title"] = "MLT Log-In";
}

@section NavButtons {
    <!-- L to R -->
    <a href="/Home" class="topnav-lbtn topnav-first">Home</a>

    <!-- R to L -->
    <a href="SignUp" class="topnav-rbtn">Sign-Up</a>
    <a href="Login" class="topnav-rbtn active">Log-In</a>
}

<body>
    <div class="content-full">
        <div class="row">
            <div class="form-reg col-sm-10 col-md-8 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Lab Technician Log-In</h2>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <form asp-action="Login" method="post" style="text-align: left">

                            <!-- CSMLS ID -->
                            <div class="form-group">
                                <label>CSMLS ID</label>
                                @Html.TextBoxFor(n => n.CSMLSID, new { id = "index-csmlsid", type = "text", placeholder = "####-###", title = "7-digit Canadian Society for Medical Labroratory Science ID", @class = "form-control" })
                                @Html.ValidationMessageFor(n => n.CSMLSID)
                                <small class="form-text text-muted">7-digit Canadian Society for Medical Labroratory Science ID</small>
                            </div>

                            <!-- Keyword -->
                            <div class="form-group">
                                <label>Keyword</label>
                                @Html.TextBoxFor(n => n.MLTKeyword, new { placeholder = "Keyword", title = "Identification keyphrase used for encryption", @class = "form-control" })
                                <small class="form-text text-muted">Identification keyphrase used for encryption</small>
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                <label>Password</label>
                                @Html.TextBoxFor(n => n.password, new { type = "password", placeholder = "Password", @class = "form-control" })
                                @Html.ValidationMessageFor(n => n.password)
                            </div>

                            <button type="submit" id="submitButton" class="btn btn-success btn-block">Log-In</button>
                            <div class="form-group">
                                <small class="message">Don't have a lab technician's account? <a href="SignUp">Sign-Up here.</a></small>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts{
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>


    <script type="text/javascript">
        jQuery(function ($) {
            $("#index-csmlsid").inputmask("9999-999");
        });</script>
}