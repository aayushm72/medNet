@model PatientSignUpViewModel

@{
    ViewData["Title"] = "Patient Sign-Up";
}

<style>
    .topnav .topnav-plu {
        display: none;
    }

    .topnav .topnav-rp {
        display: none;
    }

    .topnav .topnav-pp {
        display: none;
    }

    .topnav .topnav-pli {
        display: none;
    }

    .topnav .topnav-psu {
        display: none;
    }

    .topnav .topnav-logout {
        display: none;
    }
</style>

<div class="patient-signup-page">
    <div class="form">
        <div class="heading">
            <p>Sign Up for MedNet</p>
        </div>
        <p>Enter your details below to create an account.</p>
        <form asp-controller="Home" asp-action="PatientSignUp" method="post" class="text-form">
            <label>First Name:</label>
            @Html.TextBoxFor(n => n.FirstName, new { placeholder = "First Name", @required = "required" })
            <label>Last Name:</label>
            @Html.TextBoxFor(n => n.LastName, new { placeholder = "Last Name", @required = "required" })
            <label>Email:</label>
            @Html.TextBoxFor(n => n.Email, new { placeholder = "Email", @required = "required" })
            <div class="tooltip allign">
                <label>Personal Health Record Number:</label>
                <span class="tooltiptext">10 digit Personal Health Record Number</span>
            </div>
            @Html.TextBoxFor(n => n.PHN, new { id = "patient-signup-PHN", placeholder = "XXXX-XXX-XXX", title = "10 digit Personal Health Record Number.", @required = "required" })
            <div class="tooltip">
                <label>Keyword:</label>
                <span class="tooltiptext">Identification pass phrase.</span>
            </div>
            @Html.TextBoxFor(n => n.KeyWord, new { placeholder = "Keyword", title = "Identification Passphrase Here", @required = "required" })
            <div class="tooltip">
                <label>Date of Birth:</label>
                <span class="tooltiptext">Date of Birth.</span>
            </div>
            <div class="column">
                @Html.TextBoxFor(n => n.DateOfBirth, new
                {
                    id = "DateOfBirth",
                    type = "date",
                    max = "2020-04-01"
                })
            </div>
            <label>Password:</label>
            @Html.TextBoxFor(n => n.Password, new { type = "password", id = "password", placeholder = "Password", onkeyup = "check()", @required = "required" })
            <label>Confirm Password:</label>
            <input type="password" id="retype-password" name="retype-password" placeholder="Retype Password" onkeyup='check();' />
            <span id='message'></span><br /><br />
            <button type="submit" id="submitButton">Register with Fingerprint</button>
        </form>
    </div>
</div>

