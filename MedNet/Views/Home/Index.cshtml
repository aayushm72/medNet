        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        <!-- Select2 -->
        <script src="~/theme/plugins/select2/js/select2.full.min.js"></script>
        <!-- Bootstrap4 Duallistbox -->
        <script src="~/theme/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
        <!-- InputMask -->
        <script src="~/theme/plugins/moment/moment.min.js"></script>
        <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
        <!-- date-range-picker -->
        <script src="~/theme/plugins/daterangepicker/daterangepicker.js"></script>
        <!-- bootstrap color picker -->
        <script src="~/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
        <!-- Tempusdominus Bootstrap 4 -->
        <script src="~/theme/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
        <!-- Bootstrap Switch -->
        <script src="~/theme/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
        <!-- jQuery -->
        <script src="~/theme/plugins/jquery/jquery.min.js"></script>
        <!-- InputMask -->
        <script src="~/theme/plugins/moment/moment.min.js"></script>
        <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- bs-custom-file-input -->
        <script src="~/theme/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/theme/dist/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="~/theme/dist/js/demo.js"></script>

        <style>
            .topnav .topnav-plu {
                display: none;
            }

            .topnav .topnav-home {
                display: none;
            }

            .topnav .topnav-pp {
                display: none;
            }

            .topnav .topnav-logout {
                display: none;
            }
        </style>
    </head>


    <body>
        
        <div class="jumbotron text-center" style="background:transparent !important">
            <br />
            <h1>Welcome to MedNet</h1>
            <h3><em>Your Health, Your Data.</em></h3>
            <br />
            <p>To get started, please select your user type to begin.</p>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card border-0">
                        <div class="card-body">
                            <h2 class="card-title">General User</h2>
                            <p class="card-text">To view your personal medical information. If you are looking to sign up for MedNet, please contact a registered healthcare provider.</p>
                            <a href="/Patients/Login" class="btn btn-success">Continue</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card border-0">
                        <div class="card-body">
                            <h2 class="card-title">Healthcare Provider</h2>
                            <p class="card-text">To add, and modify a patient's medical information.</p>
                            <h4 class="card-text">Please select your profession below</h4>
                            <a href="/Doctors/Login" class="btn btn-success" style="margin-bottom: 5px">Doctor</a>
                            <a href="/MLTs/Login" class="btn btn-success" style="margin-bottom: 5px">Lab Technician</a>
                            <a href="/Pharmacists/Login" class="btn btn-success" style="margin-bottom: 5px">Pharmacist</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        

        
    </body>
</html>
   

