    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>New Medical Record Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                        <li class="breadcrumb-item active">New Medical Record Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Instance</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="selectRecordType">New Record Type</label>
                                <select class="form-control" id="selectRecordType">
                                    <option value="" disabled selected hidden>Select Record Type</option>
                                    <option value="doctorsNote">Add New Doctor's Note</option>
                                    <option value="prescription">Add New Prescription</option>
                                    <option value="testResult">Add New Test Results</option>
                                </select>
                            </div>

                            <div class="form-group" id="doctorsNote1">
                                <label>Purpose of Visit</label>
                                <input type="text" class="form-control" placeholder="Main concern addressed">
                            </div>

                            <div class="form-group" id="doctorsNote2">
                                <label>Description</label>
                                <textarea class="form-control" rows="3" placeholder="Enter appointment notes"></textarea>
                            </div>

                            <div class="form-group" id="doctorsNote3">
                                <label>Final Diagnosis</label>
                                <input type="text" class="form-control" placeholder="Identification of concern raised">
                            </div>

                            <div class="form-group" id="doctorsNote4">
                                <label>Further Instructions and General Precautions</label>
                                <textarea class="form-control" rows="3" placeholder="Physical/dietary precautions, restrictions and recommendations"></textarea>
                            </div>

                            <div class="form-group" id="prescription1">
                                <label>Prescribing Date</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask id="todaysDate">
                                </div>
                            </div>

                            <div class="form-group" id="prescription2">
                                <label>Drug Name and Strength</label>
                                <input type="text" class="form-control" placeholder="Drug name, strength">
                            </div>

                            <div class="row" id="prescription3">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Dosage and Frequency (mg/dose)</label>
                                        <input type="text" class="form-control" placeholder="00.00" onkeypress="return isNumber(event)">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                            <label class="form-check-label">Before Breakfast</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                            <label class="form-check-label">Before Lunch</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                            <label class="form-check-label">Before Dinner</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                            <label class="form-check-label">After Breakfast</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                            <label class="form-check-label">After Lunch</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                            <label class="form-check-label">After Dinner</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row" id="prescription4">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Start Day</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                            <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask id="datemask2">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>End Day</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                            <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask id="datemask3">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" id="prescription5">
                                <label>Direction for Use or Special Instructions</label>
                                <textarea class="form-control" rows="3" placeholder="Restrictions and Recommendations"></textarea>
                            </div>

                            <div class="form-group" id="test1">
                                <label for="selectTestType">Test Type</label>
                                <select class="form-control" id="selectRecordType">
                                    <option value="" disabled selected hidden>Select Test Type</option>
                                    <option>Hematology</option>
                                    <option>Urine Tests</option>
                                    <option>Chemistry</option>
                                    <option>Microbiology</option>
                                    <option>Lipid</option>
                                    <option>Thyroid Functions</option>
                                    <option>Other tests</option>
                                    <option>Other chemistry tests</option>
                                </select>
                            </div>

                            <div class="form-group" id="test2">
                                <label>Reason for Test</label>
                                <textarea class="form-control" rows="3" placeholder="List symptoms and suspected illness"></textarea>
                            </div>

                            <div class="form-group" id="test3">
                                <label for="exampleInputFile">Attach file</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="exampleInputFile">
                                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer" id="submit">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        </div>

    <!-- Select2 -->
    <script src="~/theme/plugins/select2/js/select2.full.min.js"></script>
    <!-- Bootstrap4 Duallistbox -->
    <script src="~/theme/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- date-range-picker -->
    <script src="~/theme/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- bootstrap color picker -->
    <script src="~/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/theme/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Bootstrap Switch -->
    <script src="~/theme/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <!-- InputMask -->
    <script src="~/theme/plugins/moment/moment.min.js"></script>
    <script src="~/theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/theme/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
