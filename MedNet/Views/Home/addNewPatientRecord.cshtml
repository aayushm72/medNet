<script type="text/javascript">$(document).ready(function () {

        bsCustomFileInput.init();
        var today = new Date();
        var month = (today.getMonth() + 1 < 10 ? '0' + (today.getMonth() + 1) : today.getMonth() + 1)
        var day = (today.getDate() + 1 < 10 ? '0' + (today.getDate() + 1) : today.getDate() + 1)
        var date = (month + '/' + day + '/' + today.getFullYear());
        $('#todaysDate').val(date);

    });

    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }

    //Datemask mm/dd/yyyy
    $('#todaysDate').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
    $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
    $('#datemask3').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
    $('#submit').hide();

    $("#selectRecordType").change(function () {
        $('#buttonSubmit').hide();
        if ($(this).val() == "doctorsNote") {
            $('#doctorsNote1').show();
            $('#doctorsNote2').show();
            $('#doctorsNote3').show();
            $('#doctorsNote4').show();
            $('#buttonSubmit').show();
        } else {
            $('#doctorsNote1').hide();
            $('#doctorsNote2').hide();
            $('#doctorsNote3').hide();
            $('#doctorsNote4').hide();
        }

        if ($(this).val() == "prescription") {
            $('#prescription1').show();
            $('#prescription2').show();
            $('#prescription3').show();
            $('#prescription4').show();
            $('#prescription5').show();
            $('#buttonSubmit').show();
        } else {
            $('#prescription1').hide();
            $('#prescription2').hide();
            $('#prescription3').hide();
            $('#prescription4').hide();
            $('#prescription5').hide();
        }

