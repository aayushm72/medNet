        color: #b3b3b3;
        font-size: 12px;
        text-align: center;
    }

    .form .message a {
        color: #4CAF50;
        text-decoration: none;
    }

    div.heading {
        font-size: 25px;
        line-height: 30px;
        height: 30px;
    }

    .column {
        float: left;
        width: 48%;
        padding: 2px;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

</style>

<div>
    <p align="right">
        <button class="green-buttons-top" onclick="window.location.href = '/Home/PatientOverview';">Return to Patient Profile</button>
    </p>
</div>

<div class="login-page">
    <div class="form">
        <div class="heading">
            <p>Add New Patient Record</p>
        </div>
        <br />
        <form asp-controller="Home" asp-action="AddNewPatientRecord" method="post">
            <div>
                <label for="selectRecordType">New Record Type</label>
                <select id="selectRecordType">
                    <option value="" disabled selected hidden>Select Record Type</option>
                    <option value="doctorsNote">Add New Doctor's Note</option>
                    <option value="prescription">Add New Prescription</option>
                    <!--<option value="testResult">Add New Test Results</option>-->
                </select>
            </div>

            <div id="doctorsNote1">
                <label>Purpose of Visit</label>
                @Html.TextBoxFor(n => n.DoctorsNote.PurposeOfVisit, new { placeholder = "Main concern addressed" })
            </div>

            <div id="doctorsNote2">
                <label>Description</label>
                @Html.TextBoxFor(n => n.DoctorsNote.Description, new { placeholder = "Enter appointment notes" })
            </div>

            <div id="doctorsNote3">
                <label>Final Diagnoses</label>
                @Html.TextBoxFor(n => n.DoctorsNote.FinalDiagnosis, new { placeholder = "Identification of concern raised" })
            </div>

            <div id="doctorsNote4">
                <label>Further Instructions and General Precautions</label>
                @Html.TextBoxFor(n => n.DoctorsNote.FurtherInstructions, new { placeholder = "Physical/dietary precautions, restrictions and recommendations" })
            </div>

            <div id="prescription1">
                <label>Prescribing Date</label>
                @Html.TextBoxFor(n => n.Prescription.PrescribingDate, new
                {
                    placeholder = "Physical/dietary precautions, restrictions and recommendations",
                    type = "date"
                })
            </div>

            <div id="prescription2">
                <label>Drug Name and Strength</label>
                @Html.TextBoxFor(n => n.Prescription.DrugNameStrength, new { placeholder = "Drug name, strength" })
            </div>

            <div id="prescription3">
                <label>Dosage</label>
                @Html.TextBoxFor(n => n.Prescription.Dosage, new
                {
                    placeholder = "00.00",
                    onkeypress = "return isNumber(event)",
                    @class = "form-control"
                })
            </div>

            <div id="prescription4">
                <div class="row">
                    <div class="column">
                        <label>Start Day</label>
                    </div>
                    <div class="column">
                        <label>End Day</label>
                    </div>
                </div>
                <div class="row">
                    <div class="column">
                        @Html.TextBoxFor(n => n.Prescription.PrescribingDate, new
                            {
                                type = "date"
                            })
                    </div>
                    <div class="column">
                        @Html.TextBoxFor(n => n.Prescription.EndDate, new
                                {
                                    type = "date"
                                })
                    </div>
                </div>
            </div>

            <div id="prescription5">
                <label>Direction for Use or Special Instructions</label>
                @Html.TextBoxFor(n => n.Prescription.DirectionForUse, new { placeholder = "Restrictions and Recommendations" })
            </div>

            <!--
            <div id="test1">
                <label for="selectTestType">Test Type</label>
