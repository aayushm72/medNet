@model doctorSignUpViewModel

@{
    ViewData["Title"] = "";

}
<style>
    @@import url(https://fonts.googleapis.com/css?family=Roboto:300);

    .topnav {
        display: none;
    }

    .green-buttons-top {
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background: #4CAF50;
        width: 250px;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        cursor: pointer;
    }

    .green-buttons-top:hover {
        opacity: 0.8;
    }

    .login-page {
        width: 360px;
        padding: 8% 0 0;
        margin: auto;
    }

    .form {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: 1;
        background: #FFFFFF;
        max-width: 360px;
        padding: 10px 40px 40px 40px;
        text-align: center;
        border-style: solid;
        border-width: medium;
        border-color: gainsboro;
    }

    .form input {
        font-family: "Roboto", sans-serif;
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
    }

    .form button {
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background: #4CAF50;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        cursor: pointer;
    }

    .form button:disabled {
        background: grey;
    }

    form.login-form {
        text-align: left;
    }

    .form button:hover, .form button:active, .form button:focus {
        background: #43A047;
    }

    .form .message {
        margin: 15px 0 0;
        color: #b3b3b3;
        font-size: 12px;
        text-align: center;
    }

    .form .message a {
        color: #4CAF50;
        text-decoration: none;
    }

    div.heading {
        font-size: 25px;
        line-height: 30px;
        height: 30px;
    }

    .tooltip {
        position: relative;
        display: inline-block;
    }

    .tooltip .tooltiptext {
        visibility: hidden;
        width: 400px;
        background-color: black;
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px 0;
        position: absolute;
        z-index: 1;
        top: -5px;
        left: 105%;
    }

    .tooltip:hover .tooltiptext {
        visibility: visible;
    }
</style>

<div>
    <p align="right">
        <button class="green-buttons-top" onclick="window.location.href = '/Home';">Back to Home</button>
    </p>
</div>

<div class="login-page">
    <div class="form">
        <div class="heading">
            <p>Sign Up for MedNet</p>
        </div>
        <p>Enter your details below to create an account.</p>
        <form asp-controller="Home" asp-action="DoctorSignUp" method="post" class="login-form">
            <label>First Name:</label>
            @Html.TextBoxFor(n => n.FirstName, new { placeholder = "First Name" })
            <label>Last Name:</label>
            @Html.TextBoxFor(n => n.LastName, new { placeholder = "Last Name" })
            <label>Email:</label>
            @Html.TextBoxFor(n => n.Email, new { placeholder = "Email" })
            <div class="tooltip allign">
                <label>Doctor MINC:</label>
                <span class="tooltiptext">12 digit Medical Identification Number for Canada</span>
            </div>
            @Html.TextBoxFor(n => n.DoctorMINC, new { placeholder = "CAXX-XXXX-XXXX", title = "12 digit Medical Identification Number for Canada" })
            <div class="tooltip">
                <label>Doctor Keyword:</label>
                <span class="tooltiptext">Identification pass phrase.</span>
            </div>
            @Html.TextBoxFor(n => n.DoctorKeyWord, new { placeholder = "Keyword", title = "Identification Passphrase Here" })
            <label>Password:</label>
            @Html.TextBoxFor(n => n.Password, new { type = "password", id="password", placeholder = "Password", onkeyup="check()" })
            <label>Confirm Password:</label>
            <input type="password" id="retype-password" name="retype-password" placeholder="Retype Password" onkeyup='check();' />
            <span id='message'></span><br /><br />
            <button type="submit" id="submitButton">Register</button>
        </form>
    </div>
</div>

<script type="text/javascript">var check = function () {
    if (document.getElementById('password').value == document.getElementById('retype-password').value) {
        document.getElementById('message').style.color = 'green';
        document.getElementById('message').innerHTML = 'Passwords Match.';
        document.getElementById('submitButton').disabled = false;
    } else {
        document.getElementById('message').style.color = 'red';
        document.getElementById('message').innerHTML = 'Passwords do not match, please try again.';
        // document.getElementById('submitButton').disabled = true;
    }
}</script>